{
  "extends": "expo/tsconfig.base.json",
  "include": [
    "*.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",
    "paths": { "#*": ["./src/*"] }
  }
}
